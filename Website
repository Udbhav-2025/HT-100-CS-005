        }

        .container {
            max-width: 650px;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto;
        }

        input,
        textarea {
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            background: #0066ff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            margin-top: 15px;
            cursor: pointer;
        }

        button:hover {
            background: #0047b3;
        }

        /* Result Box */
        .result-box {
            margin-top: 20px;
            padding: 15px;
            border-radius: 8px;
            border-left: 5px solid #ccc;
        }

        /* Circle Indicator */
        .indicator {
            width: 90px;
            height: 90px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 16px;
            margin: auto;
            margin-bottom: 15px;
        }

        .indicator.safe {
            background: #4caf50;
        }

        /* Green */
        .indicator.suspicious {
            background: #ffc107;
            color: black;
        }

        /* Yellow */
        .indicator.malicious {
            background: #f44336;
        }

        /* Red */
    </style>
